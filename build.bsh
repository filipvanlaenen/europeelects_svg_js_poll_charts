#!/bin/bash
#
# Builds the project

TARGETDIR="target"

echo "Building the project into ${TARGETDIR}..."

mkdir -p "${TARGETDIR}"
rm -f "${TARGETDIR}/*"

# Parameter 1: Country name
# Parameter 2: Number of parties
#
function build {
  echo "Building a chart with ${2} parties for ${1}..."
  cp "${1}-${2}".svg "${TARGETDIR}"  
}

build Sweden 8
build Sweden 9

cd "${TARGETDIR}"

for f in *.svg
do
  awk 'sub("$", "\r")' "$f" > "$f-windows"
  mv "$f-windows" "$f"
done

echo "Done."
